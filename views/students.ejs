<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Students</h3>
      <div>
        <a href="/students/new" class="btn btn-success">Add New Student</a>
      </div>
    </div>
  </div>

  <div class="row space">
    
    <div class="col-12">
      <form id="search-form" method="GET" action="/students?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Students</h4>
      <table class="table table-bordered table-striped">
        <thead class="font-weight-bold">
          <tr>
            <% /* %>
            <td>Photo</td>
            <% */ %>
            <td>Registration Number</td>
            <td>Surname</td>
            <td>Other Names</td>
            <td>Gender</td>
            <td>Address</td>
            <td>Phone</td>
            <td>Department</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% students.forEach((m) => { %>
            <tr>
              <% /* %>
              <td>
                <img class="table-thumbnail" src='<%= "/images/" + m.photo  %>'>
              </td>
              <% */ %>
              <td><small><%= m.reg_no %></small></td>
              <td><small><%= m.surname %></small></td>
              <td><small><%= m.first_name + ", " + m.middle_name %></small></td>
              <td><small><%= m.gender %></small></td>
              <td><small><%= m.address %></small></td>
              <td><small><%= m.phone %></small></td>
              <td><small><%= m.department %></small></td>
              <td>
                <a href='<%= "/students/compute-result/?student_id=" + m._id %>' class="btn btn-sm btn-primary mr-2 mb-2">Compute Result</a>
                <a href='<%= "/students/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 

<%- include ('partials/bottom') %>