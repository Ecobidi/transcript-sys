<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Courses</h3>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modelId">Add New Course</button>
    </div> 
  </div>
  
  <div class="row">
    <div class="col-12">
      <form id="search-form" method="GET" action="/courses?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center bg-primary p-2 m-0 table-top text-white">List of Courses</h4>
      <table class="table table-bordered table-striped">
        <thead class="font-weight-bold">
          <tr>
            <td>Course Code</td>
            <td>Course Title</td>
            <td>Course Load</td>
            <td>Department For</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach((m) => { %>
            <tr>
              <td><%= m.course_code %></td>
              <td><%= m.course_title %></td>
              <td class="text-right"><%= m.course_load %></td>
              <td><%= m.department %></td>
              <td>
                <a href='<%= "/courses/remove/" + m._id %>' class="btn btn-sm btn-danger mx-1 my-1">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>

 <!-- Modal -->
 <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Course</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <div class="modal-body">
        <form action="/courses/new" method="POST" enctype="multipart/form-data">
          
          <fieldset class="border p-2 rounded row">
            <legend>Course Details</legend>
            <div class="form-group col-12">
              <label>Course Code: <strong class="text-danger">*</strong></label>
              <input required type="text" class="form-control" name="course_code">
            </div>
            <div class="form-group col-12">
              <label>Course Title: <strong class="text-danger">*</strong></label>
              <textarea class="form-control" name="course_title"></textarea>
            </div>
            <div class="form-group col-12">
              <label>Course Load: <strong class="text-danger">*</strong></label>
              <input required type="number" class="form-control" name="course_load">
            </div>
            <div class="form-group col-12">
              <label>Select Department: <strong class="text-danger">*</strong></label>
              <select required class="form-control" name="department">
                <option></option>
                <% departments.forEach(d => { %>
                  <option value='<%= d.department_name %>'><%= d.department_name %></option>
                <% }) %>
              </select>
            </div>
            <div class="form-group col-6">
              <label>Level: <strong class="text-danger">*</strong></label>
              <select required class="form-control" name="level">
                <option></option>
                <option value="100">100 Level</option>
                <option value="200">200 Level</option>
                <option value="300">300 Level</option>
                <option value="400">400 Level</option>
              </select>
            </div>
            <div class="form-group col-6">
              <label>Select Semester: <strong class="text-danger">*</strong></label>
              <select required class="form-control" name="semester">
                <option></option>
                <option value="first">First Semester</option>
                <option value="second">Second Semester</option>
              </select>
            </div>
          </fieldset>
          <div class="form-group mt-4">
            <button class="btn btn-success form-control" type="submit">Proceed</button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
  

<%- include ('partials/bottom') %>