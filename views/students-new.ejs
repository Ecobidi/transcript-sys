<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12 d-flex justify-content-between align-items-center underline pb-2 mb-4">
    <h3 class="title text-center">Add Student</h3>
  </div>
  <div class="col-12">
    <form action="/students/new" method="POST" enctype="multipart/form-data">
      <div>
        <% errors.forEach(err => { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= err.msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% }) %>
      </div> 

      <fieldset class="border p-2 rounded row">
        <legend>Students's Details</legend>
        <div class="form-group col-md-4">
          <label>Registration Number: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="reg_no">
        </div>
        <div class="form-group col-md-4">
          <label>Institution: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="institution">
        </div>
        <div class="form-group col-md-4">
          <label>Faculty: <strong class="text-danger">*</strong></label>
          <select name="faculty" required class="form-control">
            <option></option>
            <% faculties.forEach(d => { %>
              <option value='<%= d.name %>'><%= d.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Department: <strong class="text-danger">*</strong></label>
          <select name="department" required class="form-control">
            <option></option>
            <% departments.forEach(d => { %>
              <option value='<%= d.name %>'><%= d.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Surname: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="surname">
        </div>
        <div class="form-group col-md-6">
          <label>First Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="first_name">
        </div>
        <div class="form-group col-md-6">
          <label>Middle Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="middle_name">
        </div>
        <div class="form-group col-md-4">
          <label>Gender: <strong class="text-danger">*</strong></label>
          <select name="gender" required class="form-control">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Date of Birth: <strong class="text-danger">*</strong></label>
          <input required type="date" class="form-control" name="dob">
        </div>
        <div class="form-group col-md-4">
          <label>Residential Address: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="address">
        </div>
        <div class="form-group col-md-4">
          <label>State of Origin: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="origin_state">
        </div>
        <div class="form-group col-md-4">
          <label>L.G.A. of Origin: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="origin_lga">
        </div>
        <div class="form-group col-md-4">
          <label>Mobile Phone: <strong class="text-danger">*</strong></label>
          <input required type="tel" class="form-control" name="phone">
        </div>
        <% /* %>
        <div class="form-group col-md-4">
          <label>Student's Photo: </label>
          <input type="file" name="photo" class="form-control" accept="image/jpg, image/jpeg, image/png">
        </div>
        <% */ %>
      </fieldset>

      <fieldset class="border p-2 rounded row">
        <legend>Number of Courses Per Semester</legend>
        <div class="form-group col-md-3">
          <label>100 Level - 1st Semester: </label>
          <input required type="number" name="level_1_1" class="form-control">
        </div>
        <div class="form-group col-md-3">
          <label>100 Level - 2nd Semester: </label>
          <input required type="number" name="level_1_2" class="form-control">
        </div>
        <div class="form-group col-md-3">
          <label>200 Level - 1st Semester: </label>
          <input required type="number" name="level_2_1" class="form-control">
        </div>
        <div class="form-group col-md-3">
          <label>200 Level - 2nd Semester: </label>
          <input required type="number" name="level_2_2" class="form-control">
        </div>
      </fieldset>
    
      <div class="form-group mt-4">
        <button class="btn btn-success form-control" type="submit">Add Student</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>